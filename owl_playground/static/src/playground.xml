<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="owl_playground.playground" owl="1">
        <Counter />
        <br/>
        <br/>
        <input placeholder="Enter a new task" t-model="state.description" t-on-keyup="(event) => this.addTodo(event)" />
        <div t-foreach="state.todos" t-as="todo" t-key="todo.id">
            <Todo todo="todo" />
        </div>
    </t>
</templates>
